<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ahamove</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="delivery_vn.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <div id="msg_module_delivery_ahamove" position="replace">
                    <div class="content-group"
                         attrs="{'invisible': [('module_delivery_ahamove','=',False)]}">
                        <div class="mt16 row">
                            <label for="token_ahamove" string="Token"
                                   class="col-3 col-lg-3 o_light_label"/>
                            <field name="token_ahamove" nolabel="1"/>
                            <label for="refresh_token" string="Refresh Token"
                                   class="col-3 col-lg-3 o_light_label"/>
                            <field name="refresh_token" nolabel="1"/>
                            <a href="https://developers.ahamove.com/" class="oe_link"
                               target="_blank"><i class="fa fa-fw fa-arrow-right"/>Documents</a>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>